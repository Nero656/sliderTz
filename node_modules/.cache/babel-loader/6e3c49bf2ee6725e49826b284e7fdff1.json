{"ast":null,"code":"import Custom_slider from \"@/components/Custom_slider\";\nexport default {\n  name: 'App',\n  components: {\n    Custom_slider\n  },\n  data: () => ({\n    currentTime: 5,\n    sliderLength: 0,\n    pages: []\n  }),\n  methods: {\n    parentMethodSlideNext() {\n      this.$refs.Custom_slider.slideNext();\n    },\n\n    parentMethodSlideBack() {\n      this.$refs.Custom_slider.slideBack();\n    },\n\n    parentMethodTakeSlide(id) {\n      this.$refs.Custom_slider.slideClick(id);\n    },\n\n    startTimer() {\n      this.timer = setInterval(() => {\n        this.currentTime--;\n      }, 1000);\n    },\n\n    reloadTimer() {\n      clearTimeout(this.currentTime);\n      this.currentTime = 5;\n    }\n\n  },\n\n  mounted() {\n    this.startTimer();\n    this.sliderLength = this.$refs.Custom_slider.slides.length;\n    this.pages = this.$refs.Custom_slider.slides;\n  },\n\n  watch: {\n    currentTime(time) {\n      if (time === 0) {\n        this.$refs.Custom_slider.slideNext();\n        this.reloadTimer();\n      }\n    }\n\n  }\n};","map":{"version":3,"mappings":"AA0BA;AAEA;EACAA,WADA;EAEAC;IACAC;EADA,CAFA;EAKAC;IACAC,cADA;IAEAC,eAFA;IAGAC;EAHA,EALA;EAUAC;IACAC;MACA;IACA,CAHA;;IAIAC;MACA;IACA,CANA;;IAOAC;MACA;IACA,CATA;;IAUAC;MACA;QACA;MACA,CAFA,EAEA,IAFA;IAGA,CAdA;;IAeAC;MACAC;MACA;IACA;;EAlBA,CAVA;;EA8BAC;IACA;IACA;IACA;EACA,CAlCA;;EAmCAC;IACAX;MACA;QACA;QACA;MACA;IACA;;EANA;AAnCA","names":["name","components","Custom_slider","data","currentTime","sliderLength","pages","methods","parentMethodSlideNext","parentMethodSlideBack","parentMethodTakeSlide","startTimer","reloadTimer","clearTimeout","mounted","watch"],"sourceRoot":"src","sources":["App.vue"],"sourcesContent":["<template>\n  <div id=\"app\" class=\"content\">\n    <div class=\"form\">\n      <div class=\"content_head\">\n        <h1>Актуальное</h1>\n        <div class=\"sliderPages\">\n          <div v-bind:key=\"id\" v-for=\"id in sliderLength\">\n            <div v-if=\"id === pages.id\">\n              <span @click=\"parentMethodTakeSlide(id)\" class=\"activeSpan\"></span>\n            </div>\n            <div v-if=\"id !== pages.id\">\n              <span @click=\"parentMethodTakeSlide(id)\"></span>\n            </div>\n          </div>\n        </div>\n        <span>\n          <button @click=\"parentMethodSlideNext()\" >ᐸ</button>\n          <button @click=\"parentMethodSlideBack()\">ᐳ</button>\n        </span>\n      </div>\n      <Custom_slider ref=\"Custom_slider\"/>\n    </div>\n  </div>\n</template>\n\n<script>\nimport Custom_slider from \"@/components/Custom_slider\";\n\nexport default {\n  name: 'App',\n  components: {\n    Custom_slider,\n  },\n  data: () => ({\n    currentTime: 5,\n    sliderLength: 0,\n    pages: []\n  }),\n  methods: {\n    parentMethodSlideNext() {\n      this.$refs.Custom_slider.slideNext()\n    },\n    parentMethodSlideBack() {\n      this.$refs.Custom_slider.slideBack()\n    },\n    parentMethodTakeSlide(id) {\n      this.$refs.Custom_slider.slideClick(id)\n    },\n    startTimer() {\n      this.timer = setInterval(() => {\n        this.currentTime--\n      }, 1000)\n    },\n    reloadTimer() {\n      clearTimeout(this.currentTime)\n      this.currentTime = 5\n    },\n  },\n  mounted() {\n    this.startTimer();\n    this.sliderLength = this.$refs.Custom_slider.slides.length\n    this.pages = this.$refs.Custom_slider.slides\n  },\n  watch: {\n    currentTime(time) {\n      if (time === 0) {\n        this.$refs.Custom_slider.slideNext()\n        this.reloadTimer()\n      }\n    }\n  },\n}\n</script>\n\n"]},"metadata":{},"sourceType":"module"}