{"ast":null,"code":"import Custom_slider from \"@/components/Custom_slider\";\nexport default {\n  name: 'App',\n  components: {\n    Custom_slider\n  },\n  data: () => ({\n    timer: 0\n  }),\n  methods: {\n    parentMethodSlideNext() {\n      this.$refs.Custom_slider.slideNext();\n    },\n\n    parentMethodSlideBack() {\n      this.$refs.Custom_slider.slideBack();\n    },\n\n    startTimer() {\n      this.timer = setInterval(() => {\n        this.currentTime--;\n      }, 5);\n    },\n\n    stopTimer() {\n      clearTimeout(this.timer);\n    }\n\n  },\n\n  mounted() {\n    this.startTimer();\n  },\n\n  watch: {\n    timer(value, oldValue) {\n      if (value <= 0) return;\n\n      if (++value === oldValue || oldValue <= 0) {\n        setTimeout(() => --this.timer, 500);\n      }\n    }\n\n  }\n};","map":{"version":3,"mappings":"AAgBA;AAEA;EACAA,WADA;EAEAC;IACAC;EADA,CAFA;EAKAC;IACAC;EADA,EALA;EAQAC;IACAC;MACA;IACA,CAHA;;IAIAC;MACA;IACA,CANA;;IAQAC;MACA;QACA;MACA,CAFA,EAEA,CAFA;IAGA,CAZA;;IAaAC;MACAC;IACA;;EAfA,CARA;;EA0BAC;IACA;EACA,CA5BA;;EA6BAC;IACAR;MACA;;MACA;QACAS;MACA;IACA;;EANA;AA7BA","names":["name","components","Custom_slider","data","timer","methods","parentMethodSlideNext","parentMethodSlideBack","startTimer","stopTimer","clearTimeout","mounted","watch","setTimeout"],"sourceRoot":"src","sources":["App.vue"],"sourcesContent":["<template>\n  <div id=\"app\" class=\"content\">\n    <div class=\"form\">\n      <div class=\"content_head\">\n        <h1>Актуальное {{ timer }}</h1>\n        <span>\n          <button @click=\"parentMethodSlideNext()\">Next</button>\n          <button @click=\"parentMethodSlideBack()\">Back</button>\n        </span>\n      </div>\n      <Custom_slider ref=\"Custom_slider\"/>\n    </div>\n  </div>\n</template>\n\n<script>\nimport Custom_slider from \"@/components/Custom_slider\";\n\nexport default {\n  name: 'App',\n  components: {\n    Custom_slider,\n  },\n  data: () => ({\n    timer: 0,\n  }),\n  methods: {\n    parentMethodSlideNext() {\n      this.$refs.Custom_slider.slideNext();\n    },\n    parentMethodSlideBack() {\n      this.$refs.Custom_slider.slideBack();\n    },\n\n    startTimer() {\n      this.timer = setInterval(() => {\n        this.currentTime--\n      }, 5)\n    },\n    stopTimer() {\n      clearTimeout(this.timer)\n    },\n\n  },\n  mounted() {\n    this.startTimer();\n  },\n  watch: {\n    timer(value, oldValue) {\n      if (value <= 0) return\n      if (++value === oldValue || oldValue <= 0) {\n        setTimeout(() => --this.timer, 500)\n      }\n    }\n  }\n}\n</script>\n\n<style lang=\"sass\">\n\n/*#app {*/\n/*  font-family: Avenir, Helvetica, Arial, sans-serif;*/\n/*  -webkit-font-smoothing: antialiased;*/\n/*  -moz-osx-font-smoothing: grayscale;*/\n/*  text-align: center;*/\n/*  color: #2c3e50;*/\n/*  margin-top: 60px;*/\n/*}*/\n</style>\n"]},"metadata":{},"sourceType":"module"}